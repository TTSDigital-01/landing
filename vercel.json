{
  "version": 2,
  "builds": [
    {
      "src": "api/contact.js",
      "use": "@vercel/node"
    }
    // La parte de public/** fue eliminada
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/contact.js"
    },
     {
      "src": "/(.*)",
      "dest": "/public/index_v1.html" // Apunta directamente al HTML
    }
  ]
}
